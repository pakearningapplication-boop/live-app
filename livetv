<!-- ================= PLAYER MODAL ================= -->
<div id="playerModal">
    <div id="loader"><div class="loader"></div></div>
    <div class="closeBtn" onclick="closePlayer()">&#10005;</div>
    <div class="video-container">
        <iframe id="liveFrame" src="" allowfullscreen allow="autoplay; fullscreen"
            sandbox="allow-same-origin allow-scripts allow-forms allow-presentation"></iframe>
    </div>
</div>

<script>
function openPlayer(url){
    const modal = document.getElementById("playerModal");
    const frame = document.getElementById("liveFrame");
    const loader = document.getElementById("loader");
    modal.style.display = "block";
    loader.style.display = "flex";

    frame.src = url;
    frame.onload = function(){ loader.style.display = "none"; };

    if(modal.requestFullscreen){ modal.requestFullscreen(); }
    else if(modal.webkitRequestFullscreen){ modal.webkitRequestFullscreen(); }

    if(screen.orientation && screen.orientation.lock){
        screen.orientation.lock('landscape').catch(function(){});
    }

    history.pushState({player:true},"");
}

function closePlayer(){
    const modal = document.getElementById("playerModal");
    const frame = document.getElementById("liveFrame");
    frame.src = "";
    modal.style.display = "none";

    if(document.fullscreenElement){ document.exitFullscreen(); }
    if(screen.orientation && screen.orientation.unlock){ screen.orientation.unlock(); }
}

window.onpopstate = function(){
    const modal = document.getElementById("playerModal");
    if(modal.style.display === "block"){ closePlayer(); }
};
</script>

